@model ShoppingCartVM


<form class="add_to_cart_main" method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-12">
                    <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="coontinue_shopping_btn"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-12 add_to_cart_items">

                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row add_to_cart_items_line">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                               
                                    <img src="@item.product.ImageUrl" class="card-img-top rounded w-100" />
                                
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="title"><strong>@item.product.Title</strong></h5>
                                <h5 class="quantity"><strong>in stock : @(item.product.Quantity-item.Count)</strong></h5>
                                <p style="color: #fff;"><small>@Html.Raw(item.product.Description)</small></p>
                            </div>
                            
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right" style="display: flex; align-items: center; justify-content: center;">
                                    <h6 class="fw-semibold">
                                        @item.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                    </h6>
                                </div>
                                <div class="col-6" style="display: flex; align-items: center; justify-content: center;">
                                    <div class="btn-group" role="group">
                                        <a asp-action="plus" asp-route-cartId="@item.Id" class="count_btn" style="margin-right: 10px;">
                                            <i class="bi bi-plus"></i>
                                        </a>
                                        <a asp-action="minus" asp-route-cartId="@item.Id" class="count_btn">
                                            <i class="bi bi-dash"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2" style="display: flex; align-items: center; justify-content: center;">
                                    <a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
            <div class="card-footer cart_page_footer">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <p> Total price: <b>@Model.OrderHeader.OrderTotal.ToString("c")</b></p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <a asp-action="Summary" class="summary_btn">Check Out</a>
                    </div>
                </div>
            </div>
        </div>
</form>